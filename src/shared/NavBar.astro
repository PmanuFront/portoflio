---
import HomeIcon from "../assets/HomeIcon.astro"
import ExperienceIcon from "../assets/ExperienceIcon.astro"
import SkillsIcon from "../assets/SkillsIcon.astro"
import ProjectsIcon from "../assets/ProjectsIcon.astro"
---

<nav>
    <a href="/">
        <HomeIcon />
        <span>Sobre mi</span>
    </a>
    <a href="/Experience">
        <ExperienceIcon />
        <span>Experiencia</span>
    </a>
    <a href="/Skills">
        <SkillsIcon />
        <span>Skills</span>
    </a>
    <a href="/Projects">
        <ProjectsIcon />
        <span>Proyectos personales</span>
    </a>
</nav>

<style lang="scss">
@import '../styles/main.scss';    
    nav {
        position: absolute;
        top: 40%;
        right: 2%;
        display: flex;
        flex-direction: column;
        width: fit-content;
        padding: 10px;
        gap: 10px;
        background: $secondary-bg-color;
        border-radius: 25px;

        a {
            span {
                display: none;
            }

            &:hover {
                svg{
                    transform: scale(1.2);
                }
                span {
                    display: inline-block;
                    position: absolute;
                    left: -200%;
                    white-space: wrap;
                    color: $secondary-color;
                    max-width: 80px;
                }
            }
        }
    }
</style>