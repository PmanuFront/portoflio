---
import GlobalLayout from '../layouts/GlobalLayout.astro';
import Badge from '../components/Badge.astro';
import { SkillsData } from '../data/skills.data';
import {TechType} from '../models/technonlogie.model';
---

<GlobalLayout>
  <article>
    <h1>Skills</h1> <!-- Cambiar esto: Hacer que en el layout se configure para todas las páginas de igual forma el título: named slot -->
  
    <div class="sections_container">
      <section>
        <h2>Lenguajes de Programación</h2>
        {
          <div class="skills_container">
            {
              SkillsData.filter((skill) => skill.type == TechType.LP).map((skill) => 
                <Badge name={skill.name} type={skill.type}/>
              )
            }
          </div>
        }
      </section>
      <section>
        <h2>Frontend</h2>
        {
          <div class="skills_container">
            {
              SkillsData.filter((skill) => skill.type == TechType.F).map((skill) => 
                <Badge name={skill.name} type={skill.type}/>
              )
            }
          </div>
        }
      </section>
      <section>
        <h2>Backend</h2>
        {
          <div class="skills_container">
            {
              SkillsData.filter((skill) => skill.type == TechType.B).map((skill) => 
                <Badge name={skill.name} type={skill.type}/>
              )
            }
          </div>
        }
      </section>
      <section>
        <h2>Base de datos</h2>
        {
          <div class="skills_container">
            {
              SkillsData.filter((skill) => skill.type == TechType.BD).map((skill) => 
                <Badge name={skill.name} type={skill.type}/>
              )
            }
          </div>
        }
      </section>
      <section>
        <h2>Control de versiones</h2>
        {
          <div class="skills_container">
            {
              SkillsData.filter((skill) => skill.type == TechType.C).map((skill) => 
                <Badge name={skill.name} type={skill.type}/>
              )
            }
          </div>
        }
      </section>
      <section>
        <h2>Otros</h2>
        {
          <div class="skills_container">
            {
              SkillsData.filter((skill) => skill.type == TechType.O).map((skill) => 
                <Badge name={skill.name} type={skill.type}/>
              )
            }
          </div>
        }
      </section>
    </div>
  </article>
</GlobalLayout>

<style lang="scss">
@import '../styles/main.scss';

article {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;

  .sections_container {
    display: flex;
    flex-direction: column;
    align-items: center;
    max-height: 45vh;
    overflow: auto;
    width: 100%;
    section {
      width: 40%;
      h2 {
        font-size: 20px;
        text-align: left;
        color: #D6D6D6;
      }
  
      .skills_container {
        display: flex;
        justify-content: center;
        gap: 15px;
      }
    }
  }

}
</style>